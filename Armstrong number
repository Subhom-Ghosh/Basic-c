#include<stdio.h>
#include<math.h>
int main()
{
	int n,sum=0,count=0,temp,r;
	printf("Enter a number");
	scanf("%d",&n);
	temp=n;
	while(n!=0)
	{
		n=n/10;
		count++;
	}
	printf("%d number\n",count);
     n=temp;
     while(n!=0)
     {
     	r=n%10;
     	sum=sum+pow(r,count);
     	n=n/10;
	 }
	 if(sum==temp)
	 printf("%d is armstrong number",temp);
	 else
	 printf("%d is not",temp);
	 
	return 0;
}
